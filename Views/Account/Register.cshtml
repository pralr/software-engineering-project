@model LoginViewModel

@{
    ViewData["Title"] = "Cadastro";
}

<br />
<br />
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        @TempData["MensagemErro"]
    </div>
}

<div class="text-center fadeIn">
    <br /><br />
    <h1 class="display-4">Cadastro</h1>
    <br />

    <div class="card text-white bg-secondary mb-3" style="max-width: 100rem;">
        <div class="card-header"></div>
        <div class="card-body">
            <p class="card-text">
                <form asp-controller="Account" asp-action="Register" method="post" class="row g-3">
                    <div class="col-6">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control">
                         @Html.ValidationMessageFor(x => x.UserName)

                    </div>
                    <div class="col-6">
                        <label for="inputPassword" class="form-label">Senha</label>
                        <input type="password" asp-for="Password" class="form-control">
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>

                    <br /><br /><br /><br/>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Cadastrar</button>
                    </div>
                </form>
            </p>
            <br />
        </div>
    </div>
    <img id="logo-footer" class="fadeIn" src="~/images/logo-black.png" alt="">
</div>