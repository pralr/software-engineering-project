@model PedidoModel

<br/>
<div class="container" style="color:white;">
    <div>
        <h2 class="onlyColor" style="text-align:center" >@(ViewBag.CheckoutCompletoMensagem)!</h2>
    </div>
    <br/><br/>
    <div class="card" style="color:white;">
        <h4> Detalhes do pedido</h4>
        <div class="card-body">
            <p class="onlyColor">Cliente: <strong>@Model.Nome</strong></p>
            <p class="onlyColor">Data do pedido: <strong>@Model.PedidoEnviado</strong></p>
            <p class="onlyColor">Número do Pedido: <strong>@Model.Id</strong></p>

            <table class="table">

                <tr>
                    <th></th>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th>Preço</th>
                </tr>

                @foreach(var item in Model.PedidoItens) {
                    <tr>
                        <td><img src="@item.Lanche.ImagemUrl" width="40" height="40" /></td>
                        <td>@item.Quantidade</td>
                        <td>@item.Lanche.Nome</td>
                        <td>@item.Lanche.Preco</td>
                       
                    </tr>
                }

            </table>

            <h4>Valor  total do pedido: <strong>@(((decimal)ViewBag.TotalPedido).ToString("C2"))</strong></h4>

        </div>
    </div>
</div>

<br/>
<div style="text-align:center;">
    <h3>
        <a style="color:white; text-decoration:none" asp-controller="Home" asp-action="Index">Retornar</a>
    </h3>
</div> 