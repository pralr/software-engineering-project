@model LancheModel

<div class="container">
    <div class="row">
        <div class="card">

        <div class="text-center">
            <img src="@Model.ImagemUrl" class="img-fluid" alt="" width="300" height="300" />
        </div>

            <div class="card-block">
                <h2 class="card-title">@Model.Nome</h2>
                <p class="card-text"><h5>@Model.DescricacaoDetalhada</h5></p>

                <p class="btn btn-group align-content-lg-end">

                    <a asp-controller="Lanche" asp-action="List" class="btn btn-secondary">
                        Ver todos os lanches
                    </a>

                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" 
                    asp-action="AdicionarItemNoCarrinhoCompra" asp-route-Id="@Model.Id">
                    Adicionar @Model.Nome ao carrinho
                </a>

                </p>
            </div>

        </div>
    </div>
</div>