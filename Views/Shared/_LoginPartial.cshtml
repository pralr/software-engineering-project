@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager

<!-- se o usuario estiver logado --> 
@if(SignInManager.IsSignedIn(User)) {

    <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm" method="post" class="navbar-left">
        <ul class="nav navbar-nav navbar-left">
            <li class="nav-item">
                <button id="logout" type="submit" class="nav-link btn btn-link py-0">
                Logout : @User.Identity.Name &nbsp;
                </button>
            </li>
        </ul>
    </form>

} else {
    <ul class="navbar-nav navbar-left">
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Login" asp-route-returnUrl=
        "@string.Format("{0}", Context.Request.QueryString)" style="color:white">&nbsp; Log in&nbsp;</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Register" style="color:white">
            &nbsp;Registro&nbsp;&nbsp;&nbsp;</a>
        </li>
     </ul>
}